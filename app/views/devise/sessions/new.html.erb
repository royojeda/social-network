<div class="h-screen flex justify-center bg-gray-200">
  <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-6">
      <div class="flex justify-center">
        <%= link_to unauthenticated_root_path do %>
          <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg" alt="Workflow">
        <% end %>
        <% if false%>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Sign in to your account</h2>
        <% end %>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" })  do |f| %>
        <div class="rounded-md shadow-sm -space-y-px">
          <div class="field">
            <%= f.label :username, class: "sr-only" %>
            <%= f.text_field :username, autofocus: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-gray-500 focus:z-10 sm:text-md bg-gray-50", placeholder: "Username", autocomplete: :off, required: true %>
          </div>

          <div class="field">
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-gray-500 focus:z-10 sm:text-md bg-gray-50" %>
          </div>
        </div>

        <% if false %>
        <div class="flex items-center justify-between">
        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>

          <div class="text-sm">
            <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500"> Forgot your password? </a>
          </div>
        </div>
        <% end %>

        <div class="actions">
          <%= f.button class: "w-full py-2 px-4 text-md font-medium rounded-md text-gray-50 bg-gray-600 shadow-md hover:bg-gray-500 focus:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-400" do %>
            Log In
          <% end %>
        </div>
      <% end %>
      <div class="border-b border-stone-400"></div>
      <% if false %>
      <%= link_to "Create new account", new_user_registration_path, class: "mx-auto w-fit flex py-2 px-4 border border-transparent text-md font-medium rounded-md text-gray-50 bg-indigo-600 shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>
      <div data-controller="sign-up-modal">
        <button data-action="sign-up-modal#open" type="button" class="mx-auto w-fit flex py-2 px-4 border border-transparent text-md font-medium rounded-md text-gray-50 bg-indigo-600 shadow-md hover:bg-indigo-500 focus:bg-indigo-700 focus:ring-4 focus:outline-none focus:ring-indigo-300">
          Create new account
        </button>

        <!-- Main modal -->
        <div data-sign-up-modal-target="modal" id="authentication-modal" tabindex="-1" class="hidden bg-gray-300 overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 w-full md:inset-0 h-modal md:h-full justify-center items-center" aria-modal="true" role="dialog">
          <div class="relative p-4 w-full max-w-md h-full md:h-auto">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow-md dark:bg-gray-700">
              <button data-action="sign-up-modal#close" type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white" data-modal-toggle="authentication-modal">
                <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>

                <span class="sr-only">Close modal</span>
              </button>
              <div class="py-6 px-6 lg:px-8">
                <h3 class="mb-1 text-3xl font-semibold text-gray-900 dark:text-white">Sign Up</h3>

                <h4 class="mb-4">It's quick and easy.</h4>

                <%= form_with do |f| %>
                  <div class="flex gap-x-2.5">
                    <input type="text" name="email" class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-gray-500 focus:z-10 sm:text-sm bg-gray-50" placeholder="First name" required="">
                    <input type="text" name="email" class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-gray-500 focus:z-10 sm:text-sm bg-gray-50" placeholder="Last name" required="">
                  </div>

                  <input type="email" name="email" class="mt-3 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-gray-500 focus:z-10 sm:text-sm bg-gray-50" placeholder="Email address" required="">

                  <input type="password" name="password" id="password" placeholder="New password" class="mt-3 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-gray-500 focus:z-10 sm:text-sm bg-gray-50" required="">

                  <p class="mt-3 text-xs">Birthday</p>
                  <div class="flex gap-4">
                    <%= f.date_select :birth_date, { use_short_month: true, order: [:month, :day, :year], start_year: 1900, end_year: Time.now.year, prompt: true }, { class: "testasd mt-0.5 appearance-none relative block px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-gray-500 focus:z-10 sm:text-sm bg-gray-50 flex-1", required: true } %>
                  </div>

                  <button type="submit" class="mt-6 mx-auto block text-white bg-indigo-600 hover:bg-indigo-500 focus:bg-indigo-700 focus:ring-4 focus:outline-none focus:ring-indigo-300 font-medium rounded-md text-xl px-12 py-1.5 text-center">Sign Up</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
