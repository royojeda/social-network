<%= form_with model: Comment.new, class: "flex flex-col" do |form| %>
  <%= form.text_area :body, rows: 2, class: "focus:outline-none bg-gray-200 resize-none w-full rounded p-2 shadow-inner", placeholder: "Write a comment...", required: true, data: { post_form_target: "textArea" } %>
  <%= form.hidden_field :post_id, value: post.id %>

  <%= form.submit "Comment", class: "mt-[1.25rem] py-2 bg-gray-200 hover:bg-gray-100 focus:bg-gray-300 rounded-md py-1 shadow w-1/3 self-end" %>
<% end %>
