<div class="flex flex-col min-h-screen">
  <%= render "shared/navbar" %>
  <div class="flex flex-1 bg-gray-200">
    <div class="flex-1 basis-[30%] pl-20 pr-10">
      <div class="rounded-lg sticky top-[96px]">
        <div class="mt-4 rounded-lg shadow-lg bg-gray-50 p-8">
          <div class="mb-6 text-lg font-medium w-fit">
            Other Users
          </div>

          <%= turbo_frame_tag "other_users", class: "mt-4 space-y-4 flex flex-col" do %>
            <%= render "users/other_users" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="flex-1 basis-[40%] mt-24 rounded-lg mb-[2.6rem] px-10">
      <%= render "posts/form", post: Post.new %>

      <%= turbo_frame_tag "posts", class: "space-y-4" do %>
        <%= render @posts %>
      <% end %>
    </div>

    <div class="flex-1 basis-[30%] pl-10 pr-20">
      <div class="rounded-lg sticky top-[96px]">
        <div class="rounded-lg shadow-lg bg-gray-50 p-8">
          <div class="mb-6 text-lg font-medium w-fit">
            Friend Requests
          </div>

          <%= turbo_frame_tag "friend_requests" do %>
            <%= render @friend_requests %>
          <% end %>
        </div>

        <div class="mt-10 rounded-lg shadow-lg bg-gray-50 p-8">
          <div class="mb-6 text-lg font-medium w-fit">
            Friends
          </div>

          <%= turbo_frame_tag "friends", class: "mt-4 space-y-4 w-fit flex flex-col" do %>
            <%= render @friends %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
